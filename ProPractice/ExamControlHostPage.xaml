<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ProPractice.ExamControlHostPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <InfoBar x:Name="InfoBar" Grid.Row="0" Title="Предупреждение" Message="Мы не смогли подключиться к базе данных на удалённом сервере. Не волнуйтесь, мы используем самые последние данные, имеющиеся у нас локально." IsOpen="True" Severity="Warning" />
        <Frame x:Name="ContentFrame" Grid.Row="1" Margin="16"/>
    </Grid>
</Page>
